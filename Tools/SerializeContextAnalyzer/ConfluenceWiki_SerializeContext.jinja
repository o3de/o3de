{% for uuid, class in SerializeContext.items()|sort(attribute='1.Name') %}
    {% if Config.Filter is defined %}
        {% if class.Name.startswith(Config.Filter|lower) or class.Name.startswith(Config.Filter|upper)%}
            {{- WriteClass(uuid, class) }}
        {% endif %}
    {% else %}
        {{- WriteClass(uuid, class) }}
    {% endif %}
{% endfor %}