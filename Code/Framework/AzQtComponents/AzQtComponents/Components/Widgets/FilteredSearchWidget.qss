AzQtComponents--SearchTypeSelector QTreeView
{
    border: none;
    outline-style: none;

    show-decoration-selected: 1;
    background-color: transparent;
}

AzQtComponents--SearchTypeSelector QTreeView::item
{
    height: 24px;
}
