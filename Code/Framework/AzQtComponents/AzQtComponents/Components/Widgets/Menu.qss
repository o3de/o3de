QMenu
{
	background-color: $BackgroundColor;
}

QMenu::item
{
    color: $TextColor;
    font-size: $FontSize;
    font-family: "$FontFamily";

    /* default height is 18px */
    /* target height is 24px */
    /* 24 - 18 = 6 */
    /* 6 / 2 = 3 */
    /* top, right, bottom, left */
    padding: 2px auto 4px 20px;
    height: 18px;
}

/* Hover */
QMenu::item:selected,
QMenu::item .WidgetAction:hover
{
    background-color: $BackgroundColor;
}

QMenu::icon,
QMenu::right-arrow
{
    width: 16px;
    height: 16px;

    subcontrol-position: right center;
}

QMenu::right-arrow
{
    right: 4px;
}

QMenu::icon
{
    right: 20px;
}

QMenu::indicator:checked
{
    width: 16px;
    height: 16px;
    margin-left: 2px;
    image: url(:/stylesheet/img/UI20/checkmark-menu.svg);
}

QMenu::item:disabled
{
    color: $MenuItemDisabledColor;
}

QMenu::separator
{
    height: 0px;
    border-bottom: 1px solid $MenuSeparatorColor;
    margin-top: 2px;
    margin-bottom: 3px;
}

QMenu.SourceControlMenu
{
    margin-left: 8px;
    margin-right: 8px;
}

QMenu.SourceControlMenu::item
{
    margin-left: 22px;
}
