#pragma once

#include <Atom/Features/PostProcessing/AcesColorSpaceConversion.azsli>

float CalculateLuminance_LinearSrgb(in float3 color)
{
    // Calculate the Y value of XYZ color space.
    return dot(color, SRGBToXYZMat[1]);
}
