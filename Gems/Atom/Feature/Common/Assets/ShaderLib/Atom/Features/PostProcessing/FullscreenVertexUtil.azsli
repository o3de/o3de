#pragma once

float4 GetVertexPositionAndTexCoords(uint vertexID)
{
    // Generate tex coords (0,0), (0,2), (2,0)
    float u = float(vertexID & 2);
    float v = float((vertexID << 1) & 2);

    // Generate clip space positions from texCoords
    // for      (0,0),  (0,2), (2,0) 
    // we get   (-1,1), (-1,-3), (3,1) 
    float x = u * 2.0 - 1.0;
    float y = v * -2.0 + 1.0;

    return float4(x, y, u, v);
}
