#pragma once

float3 Hsv_To_LinearColor(float3 color) 
{
    float4 K = float4(1.0f, 2.0f / 3.0f, 1.0f / 3.0f, 3.0f);
    float3 p = abs(frac(color.xxx + K.xyz) * 6.0f - K.www);
    return color.z * lerp(K.xxx, saturate(p - K.xxx), color.y);
}
