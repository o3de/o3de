#pragma once

float3 HsvToLinearColor(float3 color) 
{
    const float4 k = float4(1.0f, 2.0f / 3.0f, 1.0f / 3.0f, 3.0f);
    const float3 p = abs(frac(color.xxx + k.xyz) * 6.0f - k.www);
    return color.z * lerp(k.xxx, saturate(p - k.xxx), color.y);
}
