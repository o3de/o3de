#pragma once

#include <Atom/Features/PostProcessing/AcesColorSpaceConversion.azsli>

float3 LinearSrgb_To_AcesCg(float3 color)
{
    return mul(mul(XYZToAP1Mat, mul(D65ToD60Cat, SRGBToXYZMat)), color);
}
