#pragma once

// This material function exists to support user-defined deformation (e.g. wind)
void VertexLocalToWorld(float3 position, out worldPosition)
{
    float4x4 localToWorld = ObjectSrg::GetWorldMatrix();
    worldPosition = mul(localToWorld, float4(position, 1.0));
}

void VertexLocalToWorldPrev(float3 position, out worldPositionPrev)
{
    float4x4 localToWorld = ObjectSrg::GetWorldMatrixPrev();
    worldPositionPrev = mul(localToWorld, float4(position, 1.0));
}