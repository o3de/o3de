#include <Atom/RPI/TangentSpace.azsli>

// Transform local vertex tangent frame to world space coordinates
void EvaluateWorldSpaceTBN(
    float3 normal, 
    float4 tangent, 
    float3 bitangent, 
    out float3 normalWS, 
    out float3 tangentWS, 
    out float3 bitangentWS)
{
    float4x4 localToWorld = ObjectSrg::GetWorldMatrix();
    float3x3 localToWorldIT = ObjectSrg::GetWorldMatrixInverseTranspose();
    ConstructTBN(
        normal, 
        tangent, 
        bitangent, 
        localToWorld, 
        localToWorldIT,
        m_normalWS,
        m_tangentWS,
        m_bitangentWS);
}