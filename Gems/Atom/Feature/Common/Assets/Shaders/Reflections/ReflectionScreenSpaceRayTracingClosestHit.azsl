#include "ReflectionScreenSpaceRayTracingClosestHit.azsli"

[shader("closesthit")]
void ClosestHit(inout PayloadData payload, BuiltInTriangleIntersectionAttributes attrib)
{

    MeshInfo meshInfo;
    if (GetMeshInfoEntry(InstanceID(), meshInfo)) {
        VsInput vertex = GetHitInterpolatedVertexData(meshInfo, PrimitiveIndex(), attrib.barycentrics);

        ScreenSpaceClosestHitImpl(payload, vertex, WorldToObject3x4());
    }

}
