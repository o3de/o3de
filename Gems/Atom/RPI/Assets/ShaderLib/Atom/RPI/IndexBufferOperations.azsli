#pragma once

#include <Atom/RPI/Math.azsli>
#include <Atom/RHI/IndexFormat.azsli>
#include <Atom/RPI/VertexBufferOperations.azsli>

uint CalculateIndexLoadOffset(const uint index, const uint startOffset, const IndexFormat format)
{
    return index * GetIndexFormatSize(format) + startOffset;
}

uint3 LoadVertexIndices(ByteAddressBuffer buffer, uint byteOffset, IndexFormat format)
{
    switch (format)
    {
    case IndexFormat::Uint16:
        return LoadUint16x3FromBufferUnaligned(buffer, byteOffset);
    case IndexFormat::Uint32:
        return buffer.Load3(byteOffset);
    default:
        return uint3(0, 0, 0);
    }
}
