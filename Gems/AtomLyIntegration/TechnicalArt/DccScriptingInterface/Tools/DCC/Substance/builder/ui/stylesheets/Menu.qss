QMenuBar::item:selected
{
    background: #222222;
}


QMenu
{
    background-color: #222222;
    color: #FFFFFF;
    padding: 4px 0px 4px 0px;

    /* Note: with QMenu, only 'margin' works, not 'margin-bottom' or 'margin-top'. */
}

QMenu::item
{
    color: #FFFFFF;
    font-size: 12px;
    padding-top: 6px;
    padding-bottom: 6px;
    padding-right: 24px;
    padding-left: 24px;
}

QMenu::item:selected
{
    background-color: #444444;
}

QMenu::item:disabled
{
    color: #555555;
}

QMenu::separator
{
    height: 1px;
    background: #444444;
}
