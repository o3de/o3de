/* NOTE: a number of QLineEdit properties are defined in BaseStyleSheet.qss already, along with other text entry controls */

QLineEdit
{
    height: 16px;
    padding-left: 8px;
    border-width: 2px;
    border-style: solid;
}

QLineEdit[HasSearchAction=true] {
    padding-left: 4px;
}

QLineEdit:focus
{
    background-color: #FFFFFF;
}

QLineEdit:disabled
{
    background-color: #777777;
    color: #999999;
}
