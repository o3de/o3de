/* ============================================================= */
/* Global styles                                                 */
/* ============================================================= */


*
{
    background-color: #444444;
    color: white;
    font-family: "Amazon Ember";
    font-weight: 400;
}

QMainWindow:separator
{
    background-color: #111111;
}

QMainWindow,
QDialog,
QDockWidget
{
    color: #cccccc;
    background-color: #444444;
}

QTextEdit,
QPlainText,
QLineEdit,
QSpinBox,
QDoubleSpinBox,
QComboBox
{
    background-color: #CCCCCC;
    color: black;
    font-family: "Amazon Ember";
    border-radius: 2px;
    border-width: 0px;
    border-color: #e9e9e9;
    font-size: 12px;
    line-height: 16px;
}

